<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cardViewMargins"
    android:layout_marginBottom="@dimen/cardViewMargins">

    <TextView
        android:id="@+id/tvCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardHeight"
        android:gravity="center"
        android:text="@string/defaultCardViewText"
        android:textSize="@dimen/cardTextSize" />
</android.support.v7.widget.CardView>
